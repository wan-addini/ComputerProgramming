// Exercise 3 page 41
#include <iostream>
using namespace std;


int main()
{
  
    int loan_amount = 0;
    double interest = 0;
    int year = 0;
    int payment = 0;
    
    cout << "Please enter the amount(RM) : ";
    cin >> loan_amount;
  
    cout << "Please enter the annual interest rate(%) : ";
    cin >> interest;
    
    cout << "Please enter the year : ";
    cin >> year;
    
    // calculation 
    
    payment = (loan_amount * interest/100 * year + loan_amount) / 120;
    cout << "The payment for this loan is RM " << payment << endl;
    
  
  return 0;
}
